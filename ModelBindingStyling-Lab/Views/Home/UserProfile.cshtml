@model UserProfile

@{
    ViewData["Title"] = Model.FullName + " Profile Page";
}

<h1 class="card-header">Profile Page</h1>
<div class="d-flex justify-content-end">
    <button id="toggle-dark-mode" class="btn btn-primary">Toggle Dark Mode</button>
</div>
<h4>Ada Lovelace</h4>
<p>
    <a class="btn btn-primary" data-bs-toggle="collapse" href="#collapseExample" role="button" aria-expanded="false" aria-controls="collapseExample">
        View Profile
    </a>
</p>
<div class="collapse" id="collapseExample">
    <div class="card card-body">
		<dl class="row">
			<dt class="col-sm-2">
				@Html.DisplayNameFor(model => model.UserProfileId)
			</dt>
			<dd class="col-sm-10">
				@Model.UserProfileId
			</dd>
			<dt class="col-sm-2">
				@Html.DisplayNameFor(model => model.FullName)
			</dt>
			<dd class="col-sm-10">
				@Model.FullName
			</dd>
			<dt class="col-sm-2">
				@Html.DisplayNameFor(model => model.Email)
			</dt>
			<dd class="col-sm-10">
				@Model.Email
			</dd>
			<dt class="col-sm-2">
				@Html.DisplayNameFor(model => model.PhoneNumber)
			</dt>
			<dd class="col-sm-10">
				<a href="tel:@Model.PhoneNumber">@Model.PhoneNumber</a>
			</dd>
			<dt class="col-sm-2">
				@Html.DisplayNameFor(model => model.ImageUrl)
			</dt>
			<dd class="col-sm-10">
				<img src="@Model.ImageUrl" />
			</dd>
			<dt class="col-sm-2">
				@Html.DisplayNameFor(model => model.GitHubUrl)
			</dt>
			<dd class="col-sm-10">
				<img src="@Model.GitHubUrl" />
			</dd>
			<dt>Skilled Languages</dt>
			<dd>
				<ul>
					@foreach (string languageSkill in Model.SkilledLanguages)
					{
						<li>@languageSkill</li>
					}
				</ul>
			</dd>
		</dl>
    </div>
</div>

