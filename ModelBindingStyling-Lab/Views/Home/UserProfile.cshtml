@model UserProfile

@{
    ViewData["Title"] = Model.FullName + " Profile Page";
}

<h1>Profile Page</h1>
<div class="d-flex justify-content-end">
    <button id="toggle-dark-mode" class="btn btn-primary">Toggle Dark Mode</button>
</div>
<div>
    <h4>UserProfile</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.UserProfileId)
        </dt>
        <dd class = "col-sm-10">
            @Model.UserProfileId
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FullName)
        </dt>
        <dd class = "col-sm-10">
            @Model.FullName
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class = "col-sm-10">
            @Model.Email
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PhoneNumber)
        </dt>
        <dd class = "col-sm-10">
			<a href="tel:@Model.PhoneNumber">@Model.PhoneNumber</a>
		</dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ImageUrl)
        </dt>
        <dd class = "col-sm-10">
            <img src="@Model.ImageUrl" />
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.GitHubUrl)
        </dt>
        <dd class = "col-sm-10">
            <img src="@Model.GitHubUrl" />
        </dd>
        <dt>Skilled Languages</dt>
        <dd>
            <ul>
                @foreach(string languageSkill in Model.SkilledLanguages)
                {
                    <li>@languageSkill</li>
                }
            </ul>
        </dd>
    </dl>
</div>
